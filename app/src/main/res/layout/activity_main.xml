<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/touchArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wavemaker.TestAudio.MainActivity">

    <ProgressBar
        android:id="@+id/progress_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progress="33"
        android:max="100"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/progress_audio"
        android:text="Oido izquierdo"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_freq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_status"
        android:text="220.0 [HZ]"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginTop="24dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn_silence"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:onClick="onClickNoPuedeOirse"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/str_no_puedo_oirlo" />

        <Button
            android:id="@+id/btn_freq1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/str_puedo_oirlo"
            android:onClick="onClickPuedeOirse"
            android:layout_marginBottom="4dp"
            style="@style/Widget.AppCompat.Button.Colored"
            />

        <Button
            android:id="@+id/btn_freq2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/str_apenas_puedo_oirlo"
            android:onClick="onClickApenasPuedeOirse"
            android:layout_marginBottom="4dp"
            style="@style/Widget.AppCompat.Button.Colored"
            />

    </LinearLayout>

</RelativeLayout>