<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestVoice.VoiceMainActivity">


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_frequency"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_iniciar"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickStartStop"
        android:text="@string/str_iniciar"
        android:theme="@style/AppTheme.BlueButtonMaterial"
        app:layout_constraintBottom_toTopOf="@+id/btn_reiniciar"
        app:layout_goneMarginBottom="8dp" />

    <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickRestart"
        android:text="@string/str_reiniciar"
        android:theme="@style/AppTheme.BlueButtonMaterial"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>